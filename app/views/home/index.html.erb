<script>

document.addEventListener("turbo:load", () => {
  const video = document.getElementById("loader");
  const videoOverlay = document.getElementById("video-overlay");

  if (!video || !videoOverlay) return;

  if (sessionStorage.getItem("vhsPlayed") === "true") {
    videoOverlay.remove();
    document.body.style.overflowY = "";
    return;
  }

  video.muted = true;
  video.setAttribute("playsinline", "");
  video.setAttribute("webkit-playsinline", "");
  video.setAttribute("preload", "auto");

  video.load();

  video.play().then(() => {
    // All good â€” wait for video end
    video.addEventListener("ended", () => {
      fadeOutOverlay();
    });
  }).catch((error) => {
    console.warn("ðŸŽ¥ Video autoplay failed, switching to GIF fallback");

    // Replace video with GIF
    const gif = document.createElement("img");
    gif.src = "/assets/VHSWeb_ntsc-HS-ezgif.com-optimize.gif";
    gif.style.width = "100%";
    gif.style.height = "100%";
    gif.style.objectFit = "fill";
    gif.style.pointerEvents = "none";
    video.replaceWith(gif);

    // Fade out GIF after 2.3 seconds (one loop)
    setTimeout(() => {
      fadeOutOverlay();
    }, 2000);
  });

  document.body.style.overflowY = "hidden";

  function fadeOutOverlay() {
    videoOverlay.style.transition = "opacity 1s ease-out";
    videoOverlay.style.opacity = "0";

    setTimeout(() => {
      videoOverlay.remove();
      document.body.style.overflowY = "";
      document.body.style.visibility = "visible";
      sessionStorage.setItem("vhsPlayed", "true");
    }, 1000);
  }
});

